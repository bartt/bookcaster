<div class="summary">
  {{#if description}}
  <div class="description">
    {{{description}}}
  </div>
  {{/if}}
  <h4>Written/performed by:</h4>
  <ul class="authors">
    {{#each authors}}
      <li>{{> author}}</li>
    {{/each}}
  </ul>
  <h4>Filed under:</h4>
  <ul class="categories">
    {{#each categories}}
      <li>{{> category}}</li>
    {{/each}}
  </ul>
</div>