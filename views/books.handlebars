{{> search}}
<ul class="catalog {{#if corpus}}hidden{{/if}}">
  {{#each books}}
  {{> book}}
  {{/each}}
</ul>
{{#if corpus}}
<script>const corpus={{{corpus}}}</script>
<script type="module">
  import { Search } from '/search.js';
  new Search(corpus).listen().loadQueryParam();
  document.querySelector('.catalog').classList.remove('hidden');
</script>
{{/if}}