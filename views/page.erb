<html>
  <head>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <style>
      .catalog {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: flex-end;
      }
      .book {
        list-style: none;
        position: relative;
      }
      .feed {
        position: absolute;
        bottom: 80px;
        left: 33%;
        color: rgba(0, 0, 0, 0.4);
        font-size: 200%;
      }
      .book:hover .feed,
      .book:focus .feed {
        color: rgb(0, 0, 0);
      }
      .play {
        position: absolute;
        bottom: 10px;
        left: 10px;
        color: rgba(0, 0, 0, .4);
      }
      .play .fa-play {
        left: 2px;
      }
      .book:hover .play,
      .book.focus .play {
        color: rgb(0, 0, 0);
      }
      .duration {
        bottom: 16px;
        right: 10px;
        position: absolute;
        font-weight: bold;
        color: rgba(255, 255, 255, 0.4);
        font-family: sans-serif;
        font-size: 120%;
        text-shadow: #000 0 1px;
      }
      .book:hover .duration,
      .book:focus .duration {
        color: rgb(255, 255, 255);
      }
      .book + .book {
        margin-left: 20px;
      }
      img {
        max-width: 200px;
      }
    </style>
  </head>
  <body>
    <%= yield %>
  </body>
</html>
