<!doctype html>
<html>
  <head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <style>
      .catalog {
        display: -webkit-flex;
        display: flex;
        -webkit-flex-direction: row;
        flex-direction: row;
        -webkit-flex-wrap: wrap;
        flex-wrap: wrap;
        -webkit-align-items: flex-end;
        align-items: flex-end;
        padding: 0;
      }
      .book {
        list-style: none;
        position: relative;
        width: 240px;
        height: 366px;
        margin: 10px;
      }
      .feed {
        position: absolute;
        bottom: 80px;
        left: 33%;
        color: rgba(0, 0, 0, 0.4);
        font-size: 200%;
      }
      .book:hover .feed,
      .book:focus .feed {
        color: rgb(0, 0, 0);
      }
      .play {
        position: absolute;
        bottom: 10px;
        left: 10px;
        color: rgba(0, 0, 0, .4);
      }
      .play .fa-play {
        left: 1px;
      }
      .book:hover .play,
      .book.focus .play {
        color: rgb(0, 0, 0);
      }
      .duration {
        bottom: 11px;
        right: 10px;
        position: absolute;
        font-weight: bold;
        color: rgb(255, 255, 255);
        font-family: sans-serif;
        font-size: 120%;
        padding: 4px 6px;
        border-radius: 8px;
        background-color: rgba(0, 0, 0, .4);
      }
      .book:hover .duration,
      .book:focus .duration {
        background-color: #000;
      }
      img {
        width: 100%;
        position: absolute;
        bottom: 0;
      }
    </style>
  </head>
  <body>
    <%= yield %>
  </body>
</html>
